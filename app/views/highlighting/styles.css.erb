<%
  inline_style = Proc.new { |color| color.color_styles.map{|k,v| "#{k}:#{v} !important"}.join(';') }
  row_style = Proc.new { |color| "background-color: #{color.hexcode} !important;" }
 %>

<% Status.where.not(color_id: nil).includes(:color).find_each do |status| %>
.__hl_inl_status_<%= status.id %> { <%= inline_style.call(status.color) %>}
.__hl_row_status_<%= status.id %> { <%= row_style.call(status.color) %>}
<% end %>

<% IssuePriority.where.not(color_id: nil).includes(:color).find_each do |priority| %>
.__hl_inl_priority_<%= priority.id %> { <%= inline_style.call(priority.color) %>}
.__hl_row_priority_<%= priority.id %> { <%= row_style.call(priority.color) %>}
<% end %>
